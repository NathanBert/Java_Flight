<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.flight.ui.controllers.SignInController">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Label fx:id="welcomeLabel" text="Sign Into our brand new flight reservation site !" />
        </HBox>
    </top>

    <left>
        <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
            <TextField fx:id="emailField" promptText="Email"/>
            <PasswordField fx:id="passField" promptText="Password"/>
            <TextField fx:id="firstNameField" promptText="First Name"/>
            <TextField fx:id="lastNameField" promptText="Last Name"/>
            <TextField fx:id="phoneField" promptText="Phone Number"/>
            <Button text="Sign In" onAction="#onSign"/>
            <Button text="Back" onAction="#onBack"/>

            <Label fx:id="errorLabel" text="" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane"/>
    </center>
</BorderPane>
