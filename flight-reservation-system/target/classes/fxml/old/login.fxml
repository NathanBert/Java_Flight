<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.flight.ui.controllers.LoginController">
  <children>
    <VBox spacing="10" alignment="CENTER" prefWidth="300" prefHeight="200">
      <Label text="Connexion" styleClass="header"/>
      <TextField fx:id="emailField" promptText="Email"/>
      <PasswordField fx:id="passField" promptText="Password"/>
      <Button text="Login" onAction="#onLogin"/>
      <Button text="Create account" onAction="#onSignIn"/>

      <Label fx:id="errorLabel" textFill="red"/>
    </VBox>
  </children>
</AnchorPane>
